{
	"info": {
		"_postman_id": "ruangtes-publicuser-testflow-collection",
		"name": "RuangTes - Public User Test Flow",
		"description": "Public user test flow endpoints - access purchased tests and start test sessions (requires authentication)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Available Tests",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    if (response.success && response.data && response.data.length > 0) {",
							"        const firstTest = response.data[0];",
							"        if (firstTest.id) {",
							"            pm.environment.set('test_id', firstTest.id);",
							"        }",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/my-tests",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"my-tests"
					]
				},
				"description": "Get available tests (purchased and payment verified). Shows has_active_session and is_completed status. Auto-saves test_id to environment."
			}
		},
		{
			"name": "Get Test Instructions",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/my-tests/{{test_id}}/instructions",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"my-tests",
						"{{test_id}}",
						"instructions"
					]
				},
				"description": "Get test instructions for purchased test. Verifies test is purchased and payment is verified."
			}
		},
		{
			"name": "Start Test Session",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    if (response.success && response.data && response.data.session) {",
							"        const session = response.data.session;",
							"        if (session.session_token) {",
							"            pm.environment.set('session_token', session.session_token);",
							"        }",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/my-tests/{{test_id}}/start",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"my-tests",
						"{{test_id}}",
						"start"
					]
				},
				"description": "Start a new test session for purchased test. Verifies test is purchased and payment verified. Auto-saves session_token to environment. Use this session_token for test-session endpoints."
			}
		}
	]
}
