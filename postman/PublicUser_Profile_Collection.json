{
	"info": {
		"_postman_id": "ruangtes-public-user-profile-collection",
		"name": "RuangTes - Public User Profile",
		"description": "Public User Profile Management endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Profile",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/profile",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"profile"
					]
				},
				"description": "Get current user profile with completion status"
			}
		},
		{
			"name": "Get Profile Completion Status",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/profile/completion-status",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"profile",
						"completion-status"
					]
				},
				"description": "Get profile completion status (percentage, missing fields)"
			}
		},
		{
			"name": "Complete Profile",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"phone\": \"+6281234567890\",\n    \"date_of_birth\": \"1990-01-15\",\n    \"address\": \"Jl. Example No. 123, Jakarta\",\n    \"biodata\": {\n        \"gender\": \"male\",\n        \"occupation\": \"Developer\"\n    }\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/profile/complete",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"profile",
						"complete"
					]
				},
				"description": "Complete profile (first time setup - phone, date_of_birth, address, biodata)"
			}
		},
		{
			"name": "Update Profile",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Updated Name\",\n    \"phone\": \"+6281234567891\",\n    \"date_of_birth\": \"1990-01-15\",\n    \"address\": \"Updated Address\",\n    \"biodata\": {\n        \"gender\": \"male\",\n        \"occupation\": \"Senior Developer\",\n        \"education\": \"S1 Computer Science\"\n    }\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/profile/update",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"profile",
						"update"
					]
				},
				"description": "Update profile (all fields optional)"
			}
		},
		{
			"name": "Change Password",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"current_password\": \"password123\",\n    \"password\": \"newpassword123\",\n    \"password_confirmation\": \"newpassword123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/profile/change-password",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"profile",
						"change-password"
					]
				},
				"description": "Change user password"
			}
		}
	]
}
