	},
	"item": [
		{
			"name": "Get All Participants",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    if (response.success && response.data && response.data.length > 0) {",
							"        const firstParticipant = response.data[0];",
							"        if (firstParticipant.id) {",
							"            pm.environment.set('participant_id', firstParticipant.id);",
							"        }",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{tenant_admin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/participants?per_page=15&search=&banned=false",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"participants"
					],
					"query": [
						{
							"key": "per_page",
							"value": "15",
							"description": "Number of items per page"
						},
						{
							"key": "search",
							"value": "",
							"description": "Search by name or email",
							"disabled": true
						},
						{
							"key": "banned",
							"value": "false",
							"description": "Filter by banned status (true/false)",
							"disabled": true
						}
					]
				},
				"description": "Get list of all participants for the company with optional filters"
			}
		},
		{
			"name": "Create Participant with Test Assignments",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.success && response.data && response.data.id) {",
							"        pm.environment.set('participant_id', response.data.id);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{tenant_admin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"test_ids\": [1, 2],\n    \"start_date\": \"2024-01-15 00:00:00\",\n    \"end_date\": \"2024-01-30 23:59:59\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/participants",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"participants"
					]
				},
				"description": "Create a new participant and assign tests with schedule in one transaction"
			}
		},
