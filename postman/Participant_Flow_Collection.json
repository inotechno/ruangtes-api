				"description": "Get test instructions for assignment. Requires token in query parameter."
			}
		},
		{
			"name": "Start Test Session",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    if (response.success && response.data && response.data.session) {",
							"        const session = response.data.session;",
							"        if (session.session_token) {",
							"            pm.environment.set('session_token', session.session_token);",
							"        }",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/participant/session/start?token={{assignment_token}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"participant",
						"session",
						"start"
					],
					"query": [
						{
							"key": "token",
							"value": "{{assignment_token}}",
							"description": "Assignment token"
						}
					]
				},
				"description": "Start a new test session for participant. Requires token in query parameter. Auto-saves session_token to environment."
			}
		}
	]
}
