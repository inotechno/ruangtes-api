{
	"info": {
		"_postman_id": "ruangtes-participant-flow-collection",
		"name": "RuangTes - Participant Flow (No Login)",
		"description": "Participant flow endpoints - access via unique token from email (no authentication required)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Assignment by Token",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    if (response.success && response.data) {",
							"        const assignment = response.data.assignment;",
							"        if (assignment && assignment.token) {",
							"            pm.environment.set('assignment_token', assignment.token);",
							"        }",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/participant/assignment/{{assignment_token}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"participant",
						"assignment",
						"{{assignment_token}}"
					]
				},
				"description": "Get assignment info by token (public endpoint, no auth required). Token is from email assignment link."
			}
		},
		{
			"name": "Get All Assignments",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/participant/assignments?token={{assignment_token}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"participant",
						"assignments"
					],
					"query": [
						{
							"key": "token",
							"value": "{{assignment_token}}",
							"description": "Assignment token from email"
						}
					]
				},
				"description": "Get all assignments for participant (multi-test flow). Requires token in query parameter."
			}
		},
		{
