{
	"info": {
		"_postman_id": "ruangtes-cart-collection",
		"name": "RuangTes - Shopping Cart",
		"description": "Shopping Cart endpoints for managing cart items",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Cart",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/cart",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"cart"
					]
				},
				"description": "Get current user's cart with items and summary"
			}
		},
		{
			"name": "Add Test to Cart",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"test_id\": {{test_id}}\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/cart/add",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"cart",
						"add"
					]
				},
				"description": "Add a test to cart"
			}
		},
		{
			"name": "Remove Test from Cart",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/cart/{{test_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"cart",
						"{{test_id}}"
					]
				},
				"description": "Remove a test from cart"
			}
		},
		{
			"name": "Clear Cart",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/cart/clear",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"cart",
						"clear"
					]
				},
				"description": "Clear all items from cart"
			}
		}
	]
}
