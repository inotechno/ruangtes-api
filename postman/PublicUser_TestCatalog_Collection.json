{
	"info": {
		"_postman_id": "ruangtes-test-catalog-collection",
		"name": "RuangTes - Test Catalog",
		"description": "Test Catalog endpoints for browsing and viewing test details",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Browse Tests",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/tests/catalog?category_id=&search=&per_page=15",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"tests",
						"catalog"
					],
					"query": [
						{
							"key": "category_id",
							"value": "",
							"description": "Filter by category ID (optional)"
						},
						{
							"key": "search",
							"value": "",
							"description": "Search by name, code, or description (optional)"
						},
						{
							"key": "per_page",
							"value": "15",
							"description": "Items per page"
						}
					]
				},
				"description": "Browse available tests for public users (no auth required)"
			}
		},
		{
			"name": "Get Test Details",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    if (response.success && response.data && response.data.test && response.data.test.id) {",
							"        pm.environment.set('test_id', response.data.test.id);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text",
						"disabled": true
					}
				],
				"url": {
					"raw": "{{base_url}}/api/tests/catalog/{{test_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"tests",
						"catalog",
						"{{test_id}}"
					]
				},
				"description": "Get test details (auth optional - shows is_purchased if authenticated)"
			}
		},
		{
			"name": "Get Test Categories",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/tests/catalog/categories",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"tests",
						"catalog",
						"categories"
					]
				},
				"description": "Get test categories for filtering (no auth required)"
			}
		}
	]
}
