		{
			"name": "Subscriptions",
			"item": [
				{
					"name": "Get Available Plans",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"pm.environment.set('base_url', 'http://localhost:8000');"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data && response.data.length > 0) {",
									"        const firstPlan = response.data[0];",
									"        if (firstPlan.id) {",
									"            pm.environment.set('subscription_plan_id', firstPlan.id);",
									"        }",
									"        if (firstPlan.prices && firstPlan.prices.length > 0) {",
									"            pm.environment.set('subscription_price_id', firstPlan.prices[0].id);",
									"        }",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{tenant_admin_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/subscriptions/available-plans",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"subscriptions",
								"available-plans"
							]
						}
					}
				},
				{
					"name": "Purchase Subscription (Pre-paid)",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"pm.environment.set('base_url', 'http://localhost:8000');"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data) {",
									"        if (response.data.id) {",
									"            pm.environment.set('subscription_id', response.data.id);",
									"        }",
									"        if (response.data.transactions && response.data.transactions.length > 0) {",
									"            const transaction = response.data.transactions[0];",
									"            if (transaction.payment && transaction.payment.id) {",
									"                pm.environment.set('payment_id', transaction.payment.id);",
									"            }",
									"        }",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{tenant_admin_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"subscription_plan_id\": {{subscription_plan_id}},\n    \"subscription_price_id\": {{subscription_price_id}},\n    \"billing_type\": \"pre_paid\",\n    \"additional_users\": 0\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/subscriptions/purchase",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"subscriptions",
								"purchase"
							]
						}
					}
				},
