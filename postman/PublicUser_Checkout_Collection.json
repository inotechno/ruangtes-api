{
	"info": {
		"_postman_id": "ruangtes-checkout-collection",
		"name": "RuangTes - Checkout",
		"description": "Checkout endpoints for verifying cart and creating transactions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Verify Cart",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/checkout/verify",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"checkout",
						"verify"
					]
				},
				"description": "Verify cart before checkout (check availability, calculate total)"
			}
		},
		{
			"name": "Checkout",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.environment.set('base_url', 'http://localhost:8000');"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    if (response.success && response.data && response.data.id) {",
							"        pm.environment.set('transaction_id', response.data.id);",
							"        pm.environment.set('transaction_number', response.data.transaction_number);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{public_user_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/checkout",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"checkout"
					]
				},
				"description": "Checkout - create transaction from cart (cart will be cleared after checkout)"
			}
		}
	]
}
