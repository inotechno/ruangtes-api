	"item": [
		{
			"name": "Register Public User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.success && jsonData.data && jsonData.data.token) {",
							"        pm.environment.set('public_user_token', jsonData.data.token);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"Public User\",\n    \"email\": \"public@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/auth/register",
					"host": ["{{base_url}}"],
					"path": ["api", "auth", "register"]
				},
				"description": "Register new public user account"
			},
			"response": []
		},
